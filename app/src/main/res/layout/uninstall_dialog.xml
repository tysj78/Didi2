<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="为保障您的设备安全，卸载前请输入卸载码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textCursorDrawable="@null"
        android:layout_marginTop="10dp"
        android:background="@drawable/uninstall_edt"
        android:hint="请输入卸载码"
        android:inputType="text"
        android:lines="1"
        android:maxLength="6"
        android:id="@+id/uninstall_code"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/uninstall_error"
        android:visibility="gone"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:text="卸载码有误，请重新输入"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/white"
            android:background="@drawable/uninstall_btn_ok"
            android:id="@+id/uninstall_ok"
            android:layout_alignParentLeft="true"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/uninstall_edt"
            android:id="@+id/uninstall_cancel"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>