<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naruto.didi2.database.StudentActivity">

    <Button
        android:id="@+id/bt_student_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加数据" />

    <Button
        android:id="@+id/bt_student_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据" />

    <Button
        android:id="@+id/bt_student_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改数据" />

    <Button
        android:id="@+id/bt_student_pl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="批量增加数据" />

    <Button
        android:id="@+id/bt_student_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询数据" />

</LinearLayout>
