<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naruto.didi2.activity.third.GeoFenceActivity">

    <Button
        android:id="@+id/add_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加地理围栏1" />

    <Button
        android:id="@+id/add_rectangle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加地理围栏2" />

    <Button
        android:id="@+id/get_allrectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看所有围栏" />


    <Button
        android:id="@+id/remove_allrectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移除地理围栏" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
