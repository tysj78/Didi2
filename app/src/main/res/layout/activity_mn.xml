<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.naruto.didi2.activity.third.MnActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_reqgc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调用gc" />

    <com.naruto.didi2.view.EmojiEditText
        android:id="@+id/ejed_feifa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="非法字符判断框" />

    <EditText
        android:id="@+id/et_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="正常字符框" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logoicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logoicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logoicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logoicon" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文件测试" />

    <Button
        android:id="@+id/bt_compressor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片压缩" />

    <Button
        android:id="@+id/bt_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求服务器" />
</LinearLayout>
