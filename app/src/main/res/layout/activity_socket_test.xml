<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/ll_socket_test"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.mobilewise.didi2.com.yangyong.didi2.activity.SocketTestActivity">

    <Button
        android:id="@+id/bt_ping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ping"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_start_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启服务"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tip"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试你今世老公的名字：" />

    <EditText
        android:visibility="visible"
        android:id="@+id/et_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="输入你的真实姓名：" />

    <Button
        android:visibility="gone"
        android:id="@+id/bu_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试" />

    <Button
        android:id="@+id/bt_send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        android:visibility="gone" />


    <Button
        android:id="@+id/bt_send_https"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="访问https本地服务器"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_open_water_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启水印hook"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</LinearLayout>
